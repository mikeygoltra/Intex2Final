@*Alert for GDPS consent cookie notification*@
<div id="myAlert" class="alert alert-info">
    In order to comply with GDPR, click one of one of the buttons below to consent to cookies.
    <button id="acceptButton" class="btn btn-success">Accept</button>
    <button id="rejectButton" class="btn btn-danger">Reject</button>
</div>

<script>
    var acceptButton = document.getElementById("acceptButton");
    var rejectButton = document.getElementById("rejectButton");
    var myAlert = document.getElementById("myAlert");

    acceptButton.onclick = function () {
        myAlert.style.display = "none";
    };

    rejectButton.onclick = function () {
        myAlert.style.display = "none";
    };
</script>


